#!/usr/bin/env python3
import rospy

ROS_NODE_NAME = "my_publisher"

def emit():
    my_publisher = rospy.Publisher("/my_subscriber/my_topic", bool, queue_size=1)
    key = input()
    if key == 's':
        my_publisher.publish(True)

if __name__ == "__main__":
    rospy.init_node(ROS_NODE_NAME, log_level=rospy.INFO)
    try:
        emit()
    except KeyboardInterrupt:
        pass
